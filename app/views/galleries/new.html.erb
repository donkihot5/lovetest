<%= form_for(@image) do |f| %>
 
    <!---->
<div class="row">
    <div class="col-8 offset-2">
      <p>
      <h3>Upload New Image</h3>
      </p>
      <!---->
        <div class="form-group">
          <%= f.label :title %><br />
          <%= f.text_field :title, autofocus: true, class: "form-control" %>
        </div>
        <!---->
        <div class="form-group">
          <%= f.label :content %><br />
          <%= f.text_area :content, autofocus: true, rows: 2, class: "form-control"  %>
          <small class="form-text text-muted">Say a thousand words, use an image!</small>
        </div>
        <!--following part is for adding images to the gallery page-->
        <div class="form-group">
          <%= f.label :gallery_image %><br />
          <%= f.file_field :gallery_image, autofocus: true, class: "form-control-file" %>
        </div>
        <!---->
        <div class="form-group">
          <div class="actions">
            <%= f.submit "Upload Image", class: "btn btn-primary"%>
          </div>
        </div>
        <!---->
        <!---->
     </div>
</div>

<% end %>

    <style>
      input, textarea, select, .uneditable-input{
        width: 100%;
      }
    </style>