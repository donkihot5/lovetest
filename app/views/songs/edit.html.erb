<%= form_for(@song) do |f| %>
 
    <!---->
<div class="row">
    <div class="col-12">
      <p>
      <h3>Edit Your Song</h3>
      </p>
      <!---->
        <div class="form-group">
          <%= f.label :title %><br />
          <%= f.text_field :title, autofocus: true, class: "form-control" %>
        </div>
        <!---->
        <div class="form-group">
          <%= f.label :content %><br />
          <%= f.text_area :content, autofocus: true, rows: 5, class: "form-control"  %>
          <small class="form-text text-muted">Improve Your song, show Your passion!</small>
        </div>
        <!---->
        <div class="form-group">
          <div class="actions">
            <%= f.submit "Edit Song", class: "btn btn-primary"%>
          </div>
        </div>
        <!---->
        <!---->
     </div>
</div>

<% end %>

    <style>
      input, textarea, select, .uneditable-input{
        width: 100%;
      }
    </style>
